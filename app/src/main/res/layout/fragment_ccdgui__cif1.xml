<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/whitepeacock"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".CCDGUICiF2">


    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/hello_world2"
        android:textSize="18sp"
        android:textColor="@color/green"
        android:fontFamily="sans-serif-light"
        android:textStyle="normal"
        android:padding="13sp"
        android:id="@+id/textView0"
        android:layout_above="@+id/textView4"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="@string/hello_world"
        android:textSize="68sp"
        android:textColor="@color/green"
        android:fontFamily="sans-serif-light"
        android:textStyle="normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal = "true"
        android:layout_centerVertical = "true"
        android:id="@+id/textView" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/weight_conversion_text"
        android:textSize="18sp"
        android:textColor="@color/green"
        android:fontFamily="sans-serif-light"
        android:textStyle="normal"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView3" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text='@string/estimated_date_to_zero'
        android:textSize="18sp"
        android:textColor="@color/green"
        android:fontFamily="sans-serif-light"
        android:textStyle="normal"
        android:padding="7sp"


        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text='@string/countdown_box'
        android:textSize="18sp"
        android:textColor="@color/green"
        android:fontFamily="sans-serif-light"
        android:textStyle="normal"


        android:id="@+id/textView4"
        android:layout_above="@+id/textView"
        android:layout_centerHorizontal="true" />



    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/last_modified"
        android:textSize="18sp"
        android:textColor="@color/green"
        android:fontFamily="sans-serif-light"
        android:textStyle="normal"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView3b" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Credit_Button"
        android:textColor="@color/green"
        android:fontFamily="sans-serif-light"
        android:textSize="18sp"
        android:textStyle="bold"
        android:id="@+id/button2"
        android:padding="12sp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/textView4"
        android:layout_toStartOf="@+id/textView4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Debit_Button"
        android:textColor="@color/green"
        android:fontFamily="sans-serif-light"
        android:textSize="18sp"
        android:textStyle="bold"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4" />
</RelativeLayout>
